---
import HeaderLayout from './HeaderLayout/index.astro'
import FooterLayout from './FooterLayout/index.astro'
import { ViewTransitions } from 'astro:transitions'
import SocialNetwork from "../components/SocialNetwork/index.astro";
import '../asset/styles/_index.scss'
import { configApp } from '@/configs';
import GoogleAnalytics from '@/components/GoogleAnalytics.astro';

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={configApp.content_meta_layout} />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={configApp.website} />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://embedded.vnisc.com.vn" />
    <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
    <title>{title}</title>
    <GoogleAnalytics />
    <ViewTransitions />
  </head>
  <body>
    <main class="container">
      <HeaderLayout />

      <div class="content">
        <slot />
        <SocialNetwork />
      </div>

      <FooterLayout />
    </main>
  </body>
</html>
